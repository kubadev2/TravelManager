<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Jeśli potrzebujesz zmiennych -->
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Szczegóły wycieczki -->
            <TextView
                android:id="@+id/tvDeparturePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Place"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tvDeparturePlace"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>



            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/tvStartDate"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Sekcja obsługi plików PDF -->

            <TextView
                android:id="@+id/tvTicketTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bilety"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEndDate" />

            <Button
                android:id="@+id/btnSelectPdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="Wybierz plik PDF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTicketTitle2" />

            <Button
                android:id="@+id/btnUploadTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prześlij bilety"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@id/btnSelectPdf"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/tvSelectedFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brak wybranego pliku"
                app:layout_constraintTop_toBottomOf="@id/btnUploadTicket"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- RecyclerView do wyświetlania biletu (miniatur) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvSelectedFile"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"/>

            <!-- Nowy kontener dla planów podróży – zamieńmy wysokość z "0dp" na wrap_content -->
            <FrameLayout
                android:id="@+id/flTripPlans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rvTickets"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
