<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- Brak zmiennych do data bindingu -->
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="?android:attr/colorBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".TripDetailsActivity">

            <!-- KARTA SZCZEGÓŁÓW PODRÓŻY -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTripDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvDeparturePlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departure Place"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Start Date"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="End Date"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PRZYCISK EDYCJI WYJAZDU -->
            <ImageButton
                android:id="@+id/btnEditTrip"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:contentDescription="@string/edit_trip_details"
                app:srcCompat="@drawable/ic_edit"
                app:tint="?android:attr/textColorPrimary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:elevation="8dp"
                tools:ignore="TouchTargetSizeCheck"
                app:layout_constraintTop_toTopOf="@id/cardTripDetails"
                app:layout_constraintEnd_toEndOf="@id/cardTripDetails" />

            <!-- SEKCJA BILETÓW -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTickets"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTripDetails">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvTicketTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bilety komunikacyjne"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btnAddTicket"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/add_ticket"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginStart="8dp"
                            app:srcCompat="@drawable/ic_add"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- SEKCJA ZDJĘĆ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPhotos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardTickets">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPhotosTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zdjęcia"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btnAddPhoto"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/add_photo"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginStart="8dp"
                            app:srcCompat="@drawable/ic_add"
                            tools:ignore="TouchTargetSizeCheck"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvPhotos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sekcja Towarzyszy -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCompanions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardPhotos">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvCompanionsTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Towarzysze podróży"
                            android:textStyle="bold"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <ImageButton
                            android:id="@+id/btnAddCompanion"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:contentDescription="@string/add_companion"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:srcCompat="@drawable/ic_add" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCompanions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <!-- Sekcja zdjęć współdzielonych -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSharedPhotos"
                android:layout_marginTop="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardCompanions">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvSharedPhotosTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Zdjęcia współdzielone"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivGoogleDriveIcon"
                            android:layout_width="54dp"
                            android:layout_height="48dp"
                            android:clickable="true"
                            android:contentDescription="Google Drive"
                            android:focusable="true"
                            android:padding="4dp"
                            android:src="@drawable/ic_google_drive"/>
                        <Button
                            android:id="@+id/btnCreateSharedFolder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Utwórz folder"
                            android:visibility="gone" />


                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnUploadSharedPhotos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prześlij zdjęcia"
                            android:layout_marginStart="8dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Ukryty link, do odczytu w kodzie -->
                    <TextView
                        android:id="@+id/tvSharedFolderLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:text="https://drive.google.com/..."/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Sekcja Planów dni -->
            <FrameLayout
                android:id="@+id/flTripPlans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardSharedPhotos"/>



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
