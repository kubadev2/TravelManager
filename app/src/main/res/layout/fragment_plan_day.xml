<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <!-- Zdefiniuj zmienne, jeśli potrzebujesz -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nagłówek z tytułem dnia -->
        <TextView
            android:id="@+id/tvDayTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plan dnia"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Widok do wyświetlania planu (tylko do odczytu) -->
        <TextView
            android:id="@+id/tvPlanDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brak planu..."
            android:padding="8dp"
            android:background="#EEEEEE"
            android:longClickable="true" />

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <!-- Podgląd biletu – ten układ pozostaje bez zmian -->
        <TextView
            android:id="@+id/tvTicketsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bilety"
            android:textSize="16sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDayTickets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</layout>


