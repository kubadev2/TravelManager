<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Jeśli nie używasz Data Bindingu, nie musisz tu nic definiować -->
    </data>

    <!-- ScrollView zapewni przewijanie, gdy tekst będzie długi -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Prosty LinearLayout bez marginesów -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nagłówek dnia (opcjonalnie) -->
            <TextView
                android:id="@+id/tvDayTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan dnia 1"
                android:textSize="18sp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <!-- Główne pole z planem dnia, zajmujące całą szerokość ekranu -->
            <TextView
                android:id="@+id/tvPlanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brak planu..."
                android:padding="8dp"
                android:background="#EEEEEE"
                android:longClickable="true"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvTicketsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bilety"
                android:textSize="16sp"
                android:padding="8dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDayTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
